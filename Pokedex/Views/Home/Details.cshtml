@model DetailsVM
@{
   ViewData["Title"] = "Pokemon";
   var tipos = (List<Tipo>)ViewData["Tipos"];
    string Cor(string nome)
    {
        return tipos
        .Where(t => t.Nome == nome)
        .Select(t => t.Cor)
        .FirstOrDefault();
    }
}

<section class="pt-5 container">
    <div class="row">
        <div class="col text-center">
            @if (Model.Anterior != null)
            {
                <a asp-action="Details" asp-route-id="@Model.Anterior.Numero" class="btn btn-lg btn-outline-dark">
                    @Model.Anterior.Numero.ToString("000") - @Model.Anterior.Nome
                </a>
            }
        </div>

        <div class = 'col text-center' >
            <h1 class='fs-1'>@Model.Atual.Nome
                <span class='fs-2 text-secondary'>Nº @Model.Atual.Numero.ToString("000")</span>
            </h1>
        </div>
       
        </div>
        <div class="col-lg-7 fs-5 mt-4">
            <p class="mb-3"><strong>Descrição:</strong> Há um broto nas costas desse Pokémon.
                Para suportar seu peso, as pernas e o tronco de Ivysaur ficam grossos e fortes.
                Se começar a passar mais tempo deitado sob a luz do sol,
                é um sinal de que o broto florescerá em uma flor grande em breve.</p>
            <p class="mb-3"><strong>Espécie:</strong> Seed</p>
            <p class="mb-3"><strong>Altura:</strong> 1 mts</p>
            <p class="mb-3"><strong>Peso:</strong> 13 kgs</p>
            <p class="fw-bold">Tipo</p>
            <div class="btn-group">
                <a href="#" class="btn btn-lg text-white" style="background-color:#7c5">Planta</a>
                <a href="#" class="btn btn-lg text-white" style="background-color:#a59">Venenoso</a>
            </div>
        </div>
    </div>
</section>
